<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/notification_student_card_description"
        android:textSize="@dimen/card_main_content_native_simple_title_text_size"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/notification_comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="comment"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@null"/>

        <Button
            android:id="@+id/notification_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Cancel"
            android:padding="5dp"
            android:elevation="2dp"
            android:background="@null"/>

    </LinearLayout>

</LinearLayout>